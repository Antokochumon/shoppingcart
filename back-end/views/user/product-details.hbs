<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{product.Name}}</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11.1.0/swiper-bundle.min.css" />


    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            color: #333;
        }

        /* Image Container Styling */
        .image-container-wrapper {
            padding: 10px; /* Padding outside the image container */
        }

        .image-container {
            border-radius: 15px; /* Rounded corners for the container */
            overflow: hidden; /* Ensures the rounded border applies correctly */
        }

        /* Product Image Styling */
        .main-image {
            width: 100%;
            height: 450px;
            object-fit: cover;
            border-radius: 15px; /* Add border-radius to the main image */
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .main-image:hover {
            transform: scale(1.08);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.7), 0 0 40px rgba(255, 255, 255, 0.7);
        }

        /* Price and Buy Now */
        .product-price {
            font-size: 28px;
            color: #e60000;
            font-weight: bold;
        }

        .btn-add-cart, .btn-buy-now {
            font-size: 18px;
            padding: 14px;
            width: 100%;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            text-transform: uppercase;
        }

        .btn-add-cart {
            background-color: #28a745;
            color: white;
        }

        .btn-add-cart:hover {
            background-color: #218838;
        }

        .btn-buy-now {
            background-color: #ff9900;
            color: white;
            font-weight: bold;
        }

        .btn-buy-now:hover {
            background-color: #e68a00;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .main-image {
                height: 350px;
            }
        }

        /* Swiper Container Styling */
        .swiper-container {
            width: 100%;
            height: 450px;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
        }

        .swiper-slide img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            border-radius: 12px;
        }

        .swiper-button-next, .swiper-button-prev {
            color: #fff;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .swiper-button-next::after, .swiper-button-prev::after {
            font-size: 24px;
        }

        /* Slide-in animation */
        .slide-in {
            opacity: 0;
            transform: translateY(-20px);
            animation: slideIn 1s forwards;
        }

        @keyframes slideIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Smooth transition on load */
        .fade-in {
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
    </style>
</head>
<body>
    <div class="container mt-5 fade-in">
        <div class="row">
            <!-- Image Section -->
            <div class="col-md-6">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <!-- Main Image -->
                        <div class="swiper-slide">
                            <div class="image-container-wrapper">
                                <div class="image-container">
                                    <img src="{{#if product.Image}}/product-images/{{product.Image}}{{else}}/images/default-placeholder.png{{/if}}" 
                                         alt="{{product.Name}}" 
                                         class="img-fluid rounded shadow main-image">
                                </div>
                            </div>
                        </div>

                        <!-- Additional Images -->
                        {{#if product.additionalImages.length}}
                            {{#each product.additionalImages}}
                                <div class="swiper-slide">
                                    <div class="image-container-wrapper">
                                        <div class="image-container">
                                            <img src="/product-images/{{this}}" alt="Additional Image {{@index}}" class="img-fluid rounded shadow main-image">
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        {{else}}
                            <p>No additional images available</p>
                        {{/if}}
                    </div>

                    <!-- Add Navigation Buttons -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-md-6 slide-in">
                <h2 class="font-weight-bold text-dark">{{product.Name}}</h2>
                <p class="product-price">Â£{{product.Price}}</p>
                <p>{{product.Description}}</p>

                <button onclick="addToCart('{{product._id}}')" class="btn btn-add-cart mt-4">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                </button>
                <button onclick="buyNow()" class="btn btn-buy-now mt-3">
                    <i class="fas fa-bolt"></i> Buy Now
                </button>
            </div>
        </div>
    </div>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11.1.0/swiper-bundle.min.js"></script>
    <!-- Initialize Swiper -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const swiper = new Swiper('.swiper-container', {
                loop: true, // Enable infinite loop
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                autoplay: {
                    delay: 3000, // Auto-slide every 3 seconds (optional)
                },
            });
        });

        function addToCart(productId) {
            fetch('/add-to-cart/' + productId, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Product added to cart!');
                    }
                });
        }

        function buyNow() {
            window.location.href = "/cart";
        }
    </script>
</body>
</html>
