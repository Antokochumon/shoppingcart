    }

    .dropdown-toggle:hover {
        background-color: #00796b;
    }

    .dropdown-item {
        padding: 10px 15px;
        font-size: 16px;
        transition: background-color 0.2s ease;
    }

    .dropdown-item:hover {
        background-color: #f1f1f1;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        #search-bar {
            width: 150px;
        }

        #cart-button {
            padding: 8px 16px;
        }
        .navbar-brand {
            font-size: 26px !important; /* Smaller font size for mobile */
