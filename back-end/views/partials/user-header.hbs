<header id="head">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: aqua; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <a class="navbar-brand" href="/" style="font-weight: 700; font-family: 'Times New Roman', Times, serif; color: black; font-size: 34px; text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.5), 0 0 2px black; letter-spacing: 1px; text-decoration: none; -webkit-text-stroke: 0.5px black;">
            Shopping Cart
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/" style="font-weight: bold; font-family: 'Arial', sans-serif; font-size: 18px; padding: 10px 20px;">Products <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart" id="cart-button" style="font-weight: bold; font-family: 'Arial', sans-serif; font-size: 18px; padding: 10px 20px;">
                        <!-- Cart Logo -->
                        <i class="fas fa-shopping-cart" style="font-size: 20px; margin-right: 10px;"></i>
                        Cart 
                        <span id="cart-count" class="badge badge-success" style="position: absolute; top: -5px; right: -10px; font-size: 14px;">{{defaultCartCount cartItems.length}}</span>
                    </a>
                </li>
                {{#if user}}
                <li class="nav-item">
                    <a class="nav-link" href="/orders" style="font-weight: bold; font-family: 'Arial', sans-serif; font-size: 18px; padding: 10px 20px;">Orders</a>
                </li>
                {{/if}}     
            </ul>
            
            <!-- Add the search bar here -->
            <form class="form-inline my-2 my-lg-0 ml-auto position-relative">
                <input class="form-control mr-sm-2" type="search" id="search-bar" placeholder="Search products..." aria-label="Search" style="width: 200px; border-radius: 8px; padding-left: 30px; border: 1px solid #ddd;">
                <button type="button" id="clear-search" class="btn btn-link position-absolute" style="right: 10px; top: 50%; transform: translateY(-50%); display: none;">
                    <i class="fas fa-times" style="color: #00796b;"></i>
                </button>
            </form>

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="border-radius: 8px;">
                    {{#if user}}
                        {{user.Name}}
                    {{else}}
                        Account
                    {{/if}}
                </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  {{#if user}}
                  <a class="dropdown-item" href="/logout">
                  <i class="fas fa-sign-out-alt"></i> Logout
                 </a>
                 {{else}}
                   <a class="dropdown-item" href="/login">
                   <i class="fas fa-sign-in-alt"></i> Login
                   </a>
                 {{/if}}
             </div>
            </div>
        </div>
    </nav>
</header>
<style>
  .dropdown-menu {
    background: linear-gradient(135deg, #007bff, #00bfff); /* Gradient background */
    border-radius: 8px; /* Rounded corners */
    border: none; /* Remove default border */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
    overflow: hidden;
  }

  .dropdown-item {
    color: white;
    font-weight: bold;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    transition: background 0.3s ease;
  }

  .dropdown-item i {
    margin-right: 8px;
  }

  .dropdown-item:hover {
    background: rgba(255, 255, 255, 0.2); /* Soft hover effect */
  }
</style>

<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
  {{#if user}}
    <a class="dropdown-item" href="/logout">
      <i class="fas fa-sign-out-alt"></i> Logout
    </a>
  {{else}}
    <a class="dropdown-item" href="/login">
      <i class="fas fa-sign-in-alt"></i> Login
    </a>
  {{/if}}
</div>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/YOUR_KIT_CODE.js" crossorigin="anonymous"></script>

