<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles for the navbar */
        .navbar {
            padding: 1rem 0;
        }
        .navbar-brand {
            font-size: 1.5rem;
        }
        .nav-link {
            font-size: 1.1rem;
            margin: 0 0.5rem;
        }
        .btn-outline-light {
            border-color: #fff;
            color: #fff;
        }
        .btn-outline-light:hover {
            background-color: #fff;
            color: #0d6efd;
        }
    </style>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            
            <!-- Brand / Admin Panel -->
            <a class="navbar-brand fw-bold text-light" href="#">Admin Panel</a>

            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" 
                aria-label="Toggle navigation" id="navToggleBtn">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items (Links) -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="/admin">All Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="/admin/all-orders">All Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="/admin">All Users</a>
                    </li>
                </ul>
            </div>

         

        </div>
    </nav>
</header>



<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<!-- JavaScript for Smooth Scroll -->
<script>
    document.getElementById('navToggleBtn').addEventListener('click', function () {
        setTimeout(() => {
            document.getElementById('navbarNav').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 300); // Small delay to ensure navbar expands first
    });
</script>

</body>
</html>
